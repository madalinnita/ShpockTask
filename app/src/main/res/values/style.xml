<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/libre_franklin_extra_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextStyleWhite" parent="BigTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/libre_franklin_extra_bold</item>
    </style>

    <style name="MediumTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/libre_franklin_black</item>
    </style>

    <style name="HourStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/libre_franklin_medium</item>
    </style>

    <style name="TitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>

    <style name="TitleBigStyle" parent="TitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="TitleBigStyleWhite" parent="TitleBigStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="TitleSmallBold" parent="TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/libre_franklin_semi_bold</item>
    </style>

    <style name="DescriptionStyle" parent="TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_light</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>